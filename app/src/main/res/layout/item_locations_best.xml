<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp"
    android:background="@color/colorWhite"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/best_location1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/best_location_image1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorBlackOpacity"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/best_location_text1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:layout_marginLeft="3dp"
                android:maxLines="1"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/best_location2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/best_location_image2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorBlackOpacity"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/best_location_text2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:layout_marginLeft="3dp"
                android:maxLines="1"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>